extends layout 

block content 
    h1= title 

    form(method='POST', action='')
        label(for='name') Category:
        input#name(type='text', placeholder='Basketball, Running, Cleats, etc.', name='name', required='true', value=category === undefined ? '' : category.name)
        button(type='submit') Submit 
    if errors 
        ul
            each error in errors 
                li= error.msg