extends layout 

block content 
    h1= title 

    form(method='POST' action='')
        label(for='name') Name:
        input#name(type='text', placeholder='Name of item', name='name', required='true', value=undefined === item ? '' : item.name)

        label(for='description') Description: 
        textarea#description(type='textarea', placeholder='Description', name='description', required='true') #{item === undefined ? '' : item.description}

        label(for='price') Price: 
        input#price(type='number', placeholder=19.99, name='price', required=true, value=item === undefined ? 0 : item.price)

        label(for='numberInStock') Quantity: 
        input#numberInStock(type='number', placeholder=10, name='numberInStock', required=true, value=item === undefined ? 0 : item.numberInStock)

        label Category: 
            each category in categories 
                input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked)
                label(for=category._id,) #{category.name} 
        button(type='submit') Submit